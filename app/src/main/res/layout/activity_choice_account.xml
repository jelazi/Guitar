<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lubin.guitar.ChoiceAccount">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Ahoj, kdopak jsi?"
        android:textSize="32dp"
        android:textColor="#ff0080"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.062"
        app:layout_constraintHorizontal_bias="0.471"
        android:layout_marginLeft="8dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="356dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944">

        <ImageView
            android:id="@+id/imgTeacher"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/teacher"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:text="Jsem učitel"
            android:textSize="25dp"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="211dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/relativeLayout2">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="Jsem kytarista"
            android:textSize="25dp"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imgGuitarist"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:src="@drawable/guitarist"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
