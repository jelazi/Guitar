<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lubin.guitar.Teacher.TeacherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/change_name_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Změnit jméno učitele" />

        <Button
            android:id="@+id/change_pass_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Změnit heslo učitele" />

        <Button
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editování uživatele" />

        <Button
            android:id="@+id/erase_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vymazání uživatele" />

        <Button
            android:id="@+id/record_sound_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nahrávání zvuků" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
