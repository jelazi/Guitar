<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sheets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            app:srcCompat="@drawable/sheet" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@null"
            android:orientation="vertical">


            <Button
                android:id="@+id/tryMusic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:textSize="@dimen/btn_text_size"
                android:text="@string/try_song"
                app:autoSizeTextType="uniform"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:background="@null"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:src="@drawable/guitarist" />

                <TextView
                    android:id="@+id/name_user"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="NameGuitarist"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/name_text_size"
                    app:autoSizeTextType="none"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/coin_bag" />

                <TextView
                    android:id="@+id/valueMoney"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"

                    android:text="1000"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/name_text_size"
                    />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/guitar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            app:srcCompat="@drawable/guitar" />

    </LinearLayout>

    <include layout="@layout/fretboard_layout"/>

</LinearLayout>


