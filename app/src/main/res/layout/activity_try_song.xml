<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:background="@null"
        android:orientation="horizontal">




        <ImageView
            android:id="@+id/sheets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            app:srcCompat="@drawable/sheet" />

        <Button
            android:id="@+id/tryMusic"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:text="@string/try_song" />


        <ImageView
            android:id="@+id/guitar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            app:srcCompat="@drawable/guitar" />


    </LinearLayout>

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:background="@null"
        android:orientation="horizontal">


        <ImageView

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/guitarist" />

        <TextView
            android:id="@+id/name_user"
            android:layout_width="0dip"
            android:text=""
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:textSize="35dp"
            android:textColor="#ff0080"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/coin_bag" />

        <TextView
            android:id="@+id/valueMoney"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:textSize="25dp"
            android:textColor="#e4941b"
            android:gravity="center_vertical"
            android:text="250"

            />


    </LinearLayout>

    <include layout="@layout/fretboard_layout"/>
</LinearLayout>


