<?xml version="1.0" encoding="utf-8"?>


<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<EditTextPreference
    android:title="Jméno kytaristy"
    android:key="name_user"
    android:summary="Karlík"
    android:defaultValue="Karlík"

    />
    <EditTextPreference
        android:title="Heslo kytaristy"
        android:key="pass_user"
        android:summary="pass"
        android:defaultValue=""
        />


    <EditTextPreference
        android:title="Množství peněz"
        android:key="coin_user"
        android:inputType="number"
        android:summary="0"
        android:defaultValue="0"

        />

    <Preference
        android:key="list_songs"
        android:title="Povolené písně" />

    <Preference
        android:summary=""
        android:key="current_song"
        android:title="Právě používaná píseň" />


    <Preference
        android:key="list_instruments"
        android:title="Povolené nástroje" />

    <Preference
        android:summary=""
        android:key="current_instrument"
        android:title="Právě používaný nástroj" />

    <Preference
        android:key="list_frets"
        android:title="Povolené pražce" />

    <Preference
        android:summary=""
        android:key="current_fret"
        android:title="Právě používaný pražec" />

    <Preference
        android:key="list_backgrounds"
        android:title="Povolené pozadí kytary" />

    <Preference
        android:summary=""
        android:key="current_background"
        android:title="Právě používané pozadí kytary" />

    <Preference
        android:key="list_strings"
        android:title="Povolené struny" />

    <Preference
        android:summary=""
        android:key="current_string"
        android:title="Právě používané struny" />


<SwitchPreference
    android:title="Hraní tonů"
    android:key="stop_before_tone"
    android:summary="Zamezit hrát více tonů naráz"
     />

</PreferenceScreen>
