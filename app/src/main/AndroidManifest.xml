<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lubin.guitar">
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WavRecorderActivity"
            android:label="Nahraj zvuk"
            android:screenOrientation="portrait" />

        <activity
            android:name=".quitarActivity.PreviewSongActivity"
            android:label="Přehraj skladbu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quitarActivity.TrySongActivity"
            android:label="Zkus hrát"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.ChoiceAccountActivity"
            android:label="Vyber účet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quitarActivity.PlayAcordActivity"
            android:label="Zahraj si akordy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.AccountActivity"
            android:label="Napiš jméno a heslo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings.SettingsScreenActivity"
            android:label="Nastavení"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TeacherAccountActivity"
            android:label="Napište jméno a heslo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TeacherActivity"
            android:label="Nastavení aplikace"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditUserActivity"
            android:label="Editace uživatele"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />




</manifest>