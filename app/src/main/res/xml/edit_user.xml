<?xml version="1.0" encoding="utf-8"?>


<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<EditTextPreference
    android:title="@string/name_guitarist"
    android:key="name_user"

    />
    <EditTextPreference
        android:title="@string/pass_guitarist"
        android:key="pass_user"
        android:summary="pass"
        />


    <EditTextPreference
        android:title="@string/coin_value"
        android:key="coin_user"
        android:inputType="number"
        android:summary="0"
        android:defaultValue="0"

        />

    <Preference
        android:key="allow_level"
        android:summary=""
        android:title="@string/max_level" />

    <Preference
        android:key="current_level"
        android:summary=""
        android:title="@string/current_level" />

    <Preference
        android:key="list_songs"
        android:title="@string/allowed_songs" />

    <Preference
        android:summary=""
        android:key="current_song"
        android:title="@string/current_song" />


    <Preference
        android:key="list_instruments"
        android:title="@string/allowed_instruments" />

    <Preference
        android:summary=""
        android:key="current_instrument"
        android:title="@string/current_instrument" />

    <Preference
        android:key="list_frets"
        android:title="@string/allowed_frets" />

    <Preference
        android:summary=""
        android:key="current_fret"
        android:title="@string/current_fret" />

    <Preference
        android:key="list_backgrounds"
        android:title="@string/allowed_backgrounds" />

    <Preference
        android:summary=""
        android:key="current_background"
        android:title="@string/current_background" />

    <Preference
        android:key="list_strings"
        android:title="@string/allowed_strings" />

    <Preference
        android:summary=""
        android:key="current_string"
        android:title="@string/current_strings" />


<SwitchPreference
    android:title="@string/playing_tones"
    android:key="stop_before_tone"
    android:summary="@string/summary_playing_tones"
     />

</PreferenceScreen>
