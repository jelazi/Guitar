<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lubin.guitar">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Midi.MidiActivity"
            android:label="Práce s midi"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Teacher.WavRecorderActivity"
            android:label="Nahraj zvuk"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GuitarActivity.PreviewSongActivity"
            android:label="Přehraj skladbu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GuitarActivity.TrySongActivity"
            android:label="Zkus hrát"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Account.ChoiceAccountActivity"
            android:label="Vyber účet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GuitarActivity.PlayChordActivity"
            android:label="Zahraj si akordy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Account.AccountActivity"
            android:label="Napiš jméno a heslo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings.SettingsScreenActivity"
            android:label="Nastavení"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Teacher.TeacherAccountActivity"
            android:label="Napište jméno a heslo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Teacher.TeacherActivity"
            android:label="Nastavení aplikace"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Users.EditUserActivity"
            android:label="Editace uživatele"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>