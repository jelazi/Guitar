<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lubin.guitar.Teacher.TeacherAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/accTeacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/choice_account_btn_margin"
            android:layout_weight="50"
            android:gravity="center"
            android:src="@drawable/teacher" />

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/account_lbl_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/AccNameTeacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/lbl_pass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/account_lbl_text_size"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/AccountPassTeacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnAccountTeacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/to_login"
            android:textSize="@dimen/btn_text_size" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
